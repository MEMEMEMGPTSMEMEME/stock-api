{
  "openapi": "3.1.0",
  "info": {
    "title": "Stock Pattern API",
    "version": "1.0.0",
    "description": "Provides historical OHLCV data and average close price from local CSV files for stock pattern analysis."
  },
  "servers": [
    {
      "url": "https://stock-api-n6ja.onrender.com",
      "description": "Render hosted Flask server"
    }
  ],
  "paths": {
    "/price": {
      "get": {
        "operationId": "getLatestOHLCV",
        "summary": "Get latest OHLCV data",
        "parameters": [
          {
            "name": "symbol",
            "in": "query",
            "required": true,
            "schema": { "type": "string" },
            "description": "Stock symbol (e.g., TSLA)"
          },
          {
            "name": "interval",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["daily", "weekly", "monthly"]
            },
            "description": "Interval of data (default: daily)"
          },
          {
            "name": "source",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["market", "momentum"]
            },
            "description": "CSV folder to use (default: market)"
          }
        ],
        "responses": {
          "200": {
            "description": "Latest OHLCV row",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "symbol": { "type": "string" },
                    "interval": { "type": "string" },
                    "source": { "type": "string" },
                    "latest": { "type": "object" }
                  }
                }
              }
            }
          },
          "404": {
            "description": "CSV file not found"
          }
        }
      }
    },
    "/avg": {
      "get": {
        "operationId": "getAverageClose",
        "summary": "Get average close price over N days",
        "parameters": [
          {
            "name": "symbol",
            "in": "query",
            "required": true,
            "schema": { "type": "string" },
            "description": "Stock symbol (e.g., NVDA)"
          },
          {
            "name": "interval",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["daily", "weekly", "monthly"]
            },
            "description": "Interval of data (default: daily)"
          },
          {
            "name": "days",
            "in": "query",
            "required": false,
            "schema": { "type": "integer", "default": 5 },
            "description": "Number of days to average (default: 5)"
          },
          {
            "name": "source",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["market", "momentum"]
            },
            "description": "CSV folder to use (default: market)"
          }
        ],
        "responses": {
          "200": {
            "description": "Average close price",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "symbol": { "type": "string" },
                    "interval": { "type": "string" },
                    "days": { "type": "integer" },
                    "source": { "type": "string" },
                    "average_close": { "type": "number" }
                  }
                }
              }
            }
          },
          "404": {
            "description": "CSV file not found"
          }
        }
      }
    }
  }
}
