{
  "openapi": "3.1.0",
  "info": {
    "title": "Stock Pattern Analysis API",
    "version": "1.0.0",
    "description": "API for surge pattern detection, similarity, lead-lag analysis, coupling, macro flow alignment, and sync matrix."
  },
  "servers": [
    {
      "url": "https://stock-api-n6ja.onrender.com",
      "description": "Production server"
    }
  ],
  "paths": {
    "/pattern/surge": {
      "get": {
        "summary": "Detect surge pattern",
        "parameters": [
          {
            "name": "symbol",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "source",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "interval",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Surge pattern detected",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          }
        }
      }
    },
    "/pattern/surge/similarity": {
      "get": {
        "summary": "Compare with past surge pattern",
        "parameters": [
          {
            "name": "symbol",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "top_n",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 3
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Similarity results",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          }
        }
      }
    },
    "/leadlag": {
      "get": {
        "summary": "Lead-lag analysis between two symbols",
        "parameters": [
          {
            "name": "symbol1",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "symbol2",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "days",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 7
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lead-lag results",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          }
        }
      }
    },
    "/coupling": {
      "get": {
        "summary": "Coupling and divergence analysis",
        "parameters": [
          {
            "name": "symbols",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Coupling matrix result",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          }
        }
      }
    },
    "/macro_flow_alignment": {
      "get": {
        "summary": "Top-down macro pattern flow alignment",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Macro flow alignment results",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          }
        }
      }
    },
    "/sync_matrix": {
      "get": {
        "summary": "Compute multi-symbol rolling correlation matrix",
        "parameters": [
          {
            "name": "symbols",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "window",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 7
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Correlation sync matrix",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          }
        }
      }
    }
  }
}